@model Glow.Models.SLideshow

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}
<link href="~/Content/css/style.css" rel="stylesheet" />
<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>SLideshow</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.slide_Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.slide_Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.slide_Name_ar)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.slide_Name_ar)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.slide_title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.slide_title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.slide_title_ar)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.slide_title_ar)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.slide_Content)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.slide_Content)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.slide_Content_ar)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.slide_Content_ar)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.slide_image)
        </dt>

        <dd>
            @if (Model.slide_image == null || Model.slide_image == " ")
            {
                <img id="user_img" height="100" width="100" src="url()" />
            }
            else
            {
               
                <img id="user_img" height="100" width="100" src="@Url.Content(Model.slide_image)" />
            }

           
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
