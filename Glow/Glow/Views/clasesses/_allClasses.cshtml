@model Glow.Models.clasess
@foreach (var c in Model.clls)
{
    if (System.Threading.Thread.CurrentThread.CurrentCulture.TextInfo.IsRightToLeft)
    {
<div class="col-md-6 col-lg-3">
    <div class="package-program ftco-animate">
        <a href="@Url.Action("ClassDetails","clasesses" ,new {id = c.id })" class="img d-flex justify-content-center align-items-center" style="background-image: url(@c.CLass_image);">
        </a>
        <div class="text mt-3">
            <h3>@c.Class_Name_ar</h3>
            <p>@c.Class_title_ar</p>
        </div>
    </div>
</div>
    }
    else
    {
        <div class="col-md-6 col-lg-3">
            <div class="package-program ftco-animate">
                <a href="@Url.Action("ClassDetails","clasesses" ,new {id = c.id })" class="img d-flex justify-content-center align-items-center" style="background-image: url(@c.CLass_image);">
                 
                </a>
                <div class="text mt-3">
                    <h3>@c.Class_Name</h3>
                    <p>@c.Class_title</p>
                </div>
            </div>
        </div>
    }
}