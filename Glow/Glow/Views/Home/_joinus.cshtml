@model Glow.Models.Sendmail


<section style="height:100% ; width:100% ; background-color:#000000 ; direction:rtl ; text-align:center; padding:10px 5px 5px 5px ;">
    <div class="container">
        <div class="row block-9">
            <div class="col-md-4 contact-info ftco-animate bg-light p-4">
                <div class="row">
                    <div class="col-md-12 mb-4">
                        <img src="/images/logo.PNG" width="105" height="71" /> 
                    </div>

                    <div class="col-md-12 mb-4">
                        <h2 style="color:#fff; font-size:14px;font-family:Cairo">ممكن تسيب رقمك وسيتم التواصل معك في خلال 24 ساعة لشرح كل العروض والتفاصيل</h2>
                    </div>

                    <div class="col-md-12 mb-4">
                        <h2 style="color:#e39f1a; font-size:14px;font-family:Cairo">@Glow.Resources.HomeResource.Contact_Information</h2>
                    </div>
                    <div class="col-md-12 mb-3">
                        <p style="color:#fff; font-size:14px;font-family:Cairo"><span>@Glow.Resources.HomeResource.Addresss:</span> @Glow.Resources.HomeResource.Address</p>
                    </div>
                    <div class="col-md-12 mb-3" >
                        <p style="color:#fff; font-size:14px;font-family:Cairo"><span>@Glow.Resources.HomeResource.Phone:</span> <a style="color:#fff; font-size:14px;font-family:Cairo" href="tel://+2 0101 220 8944">01012208944</a></p>
                    </div>
                    <div class="col-md-12 mb-3">
                        <p style="color:#fff; font-size:14px;font-family:Cairo"><span>@Glow.Resources.HomeResource.Email:</span> <a style="color:#fff; font-size:14px;font-family:Cairo" href="mailto:info@GlowGym.com">info@GlowGym.com</a></p>
                    </div>
                    
                </div>
            </div>
            <div class="col-md-1"></div>
            
            <div class="col-md-6 ftco-animate">
                @using (Html.BeginForm("send", "ContactUS", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    <form action="" class="contact-form" method="post" role="form" id="formm">

                      
                         
                                <div class="form-group">
                                   @* <input type="text" style="width:150px ; height:30px ;" placeholder="@Glow.Resources.HomeResource.Name">*@
                                    @Html.EditorFor(model => model.Fullname, new { htmlAttributes = new { @style = "width:150px ; height:30px ; margin-bottom:5px;", placeholder = @Glow.Resources.HomeResource.Name, required = "required" } })
                                    @Html.EditorFor(model => model.MobilNo, new { htmlAttributes = new { @style = "width:150px ; height:30px ; margin-bottom:15px;", placeholder = @Glow.Resources.HomeResource.Phone, required = "required" } })
                                </div>
                          
                            
                     
                        <div class="form-group">
                            @*<input type="text" class="form-control" placeholder="@Glow.Resources.HomeResource.Subject">*@
                            
                        </div>

                        

                        <div class="form-group">
                            <input type="submit" value="@Glow.Resources.HomeResource.SendMessage"  style = "width:150px ; height:40px ;font-size:18px ;font-family:Cairo; font-weight:400 ; color:#fff ; background-color:#e39f1a">
                        </div>
                    </form>
                }

            </div>
        </div>
    </div>
</section>
