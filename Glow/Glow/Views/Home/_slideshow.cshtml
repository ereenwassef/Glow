@model IEnumerable<Glow.Models.SLideshow>

@foreach (var item in Model)
{
    if (System.Threading.Thread.CurrentThread.CurrentCulture.TextInfo.IsRightToLeft)
    {
        <div class="slider-item" style="background-image: url(@item.slide_image);">
            <div class="overlay"></div>
            <div class="container-fluid">
                <div class="row slider-text js-fullheight justify-content-center align-items-center" data-scrollax-parent="true">
                    <div class="col-sm-12 ftco-animate text-center mt-5 pt-md-5">
                        <h1 class="mb-4">@item.slide_Txt_ar <span> @item.slide_Content_ar</span></h1>
                        <h2 class="mb-4">@item.slide_Slogin_ar</h2>
                        <h3> <a href="#" onclick="ShowPopup();" class="mb-4">ابدأ الأن</a> </h3>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="slider-item " style="background-image: url(@item.slide_image);">
            <div class="overlay"></div>
            <div class="container-fluid">
                <div class="row slider-text js-fullheight justify-content-center align-items-center" data-scrollax-parent="true">
                    <div class="col-sm-12 ftco-animate text-center mt-5 pt-md-5">
                        <h1 class="mb-4">@item.slide_Txt <span> @item.slide_Content</span></h1>
                        <h2 class="mb-4">@item.slide_Slogin</h2>
                        <h3> <a href="#" onclick="ShowPopup();" class="mb-4">Starting Now</a> </h3>
                       @* <h2 class="subheading">@item.slide_title</h2> *@
                    </div>
                </div>
            </div>
        </div>
    }
}
